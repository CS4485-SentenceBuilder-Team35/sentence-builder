<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.utdteamthreefive.ui.TextBarController"
      spacing="10"
      alignment="CENTER"
      style="-fx-background-color: #F8FAFF; -fx-padding: 15; -fx-border-color: #B8CDE0; -fx-border-radius: 6; -fx-background-radius: 6;">

    <children>
        <!-- Text input field -->
        <TextField fx:id="inputField"
                   promptText="Type a word..."
                   prefWidth="350"
                   style="-fx-font-size: 14px;"/>

        <!-- Generate button BELOW the text bar -->
        <Button fx:id="generateButton"
                text="Generate Sentence"
                onAction="#onGenerateClick"
                style="-fx-background-color: #4A90E2; 
                       -fx-text-fill: white; 
                       -fx-font-size: 14px; 
                       -fx-padding: 8 16; 
                       -fx-background-radius: 6;"/>
    </children>
</VBox>
