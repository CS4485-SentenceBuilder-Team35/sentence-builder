<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.utdteamthreefive.ui.MainController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Responsive HBox -->
    <HBox fx:id="fileRow" alignment="CENTER_LEFT"
          style="-fx-background-color: #EAF4FF;
                 -fx-border-color: #B8CDE0;
                 -fx-border-radius: 6;
                 -fx-background-radius: 6;"
          prefHeight="60.0">
        
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <children>
            <!-- File name -->
            <Label text="file.txt"/>

            <!-- Small fixed gap between label and bar -->
            <Region prefWidth="30"/>

            <!-- Progress bar grows -->
            <ProgressBar fx:id="progressBar" progress="0.75" HBox.hgrow="ALWAYS"/>
              
            <!-- Flexible spacer pushes delete button right -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Delete icon -->
            <Button fx:id="deleteButton"
                    text="🗑️"
                    mnemonicParsing="false"
                    style="-fx-background-color: transparent;
                           -fx-font-size: 18px;
                           -fx-cursor: hand;"/>
        </children>
    </HBox>
</VBox>
